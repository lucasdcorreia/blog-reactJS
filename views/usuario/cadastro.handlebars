<div class="card">
  <div class="card-body">
    <h2 class="m-2">Cadastre-se</h2>
    <form action="/usuario/create" method="POST">
      <label for="nome">Nome</label>
      <input type="text" name="nome" class="form-control mb-2" required>
      <label for="email">E-mail</label>
      <input type="email" name="email" class="form-control mb-2" required>
      <label for="senha">Senha</label>
      <input type="password" name="senha" class="form-control mb-2" required>
      <label for="senha2">Repita a senha</label>
      <input type="password" name="senha2" class="form-control mb-2" required>
      <div class="row mt-3">
        <div class="col-md-10">
          <a href="/">
            <button type="reset" class="btn btn-danger ">Cancelar</button>
          </a>
        </div>
        <div class="col">
          <button type="submit" class="btn btn-success ">Criar conta</button>
        </div>
      </div>
    </form>

  </div>
</div>