{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

{{#if categoria}}
<h2>Editar Categoria</h2>
<div class="card mt-4">
  <div class="card-body">
    <form action="/categoria/update" method="post">
      <input type="hidden" name="id" value="{{categoria._id}}">
      <label for="nome">Nome </label>
      <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control"
        value='{{categoria.nome}}'>
      <label for="slug">Slug </label>
      <input type="text" name="slug" id="slug" placeholder="slug" class="form-control" value="{{categoria.slug}}">
      <br>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a href="/admin/categorias">
          <button class="btn btn-danger">Voltar</button>
        </a>
        <button class="btn btn-success" type="submit">Editar categoria</button>
      </div>
    </form>
  </div>
</div>
{{else}}
<h2>Nova Categoria</h2>
<div class="card mt-4">
  <div class="card-body">
    <form action="/admin/categorias/nova" method="post">
      <label for="nome">Nome </label>
      <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
      <label for="slug">Slug </label>
      <input type="text" name="slug" id="slug" placeholder="slug" class="form-control">
      <br>
      <button class="btn btn-success" type="submit">Criar categoria</button>
    </form>
  </div>
</div>
{{/if}}