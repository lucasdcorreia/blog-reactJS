<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <div class="col-md-6">

    <h1 class="display-4 font-italic">
      <img src="/img/nav_logo.png" style="max-width: 300px;">
    </h1>
    <p class="lead">Projeto_7 é uma aplicação web simples, consistindo em um blog implementado a partir nodeJS + express
      +
      mongoDB.</p>
    <p class="lead  mb-4">Aqui você fica sabendo sobre as novidades do mundo da programação.</p>
    <p class="lead mb-0">
      <a class="btn btn-primary" href="/postagem" role="button">Crie sua conta</a>
    </p>
  </div>
</div>



<div class="row mb-2">
  {{#each postagens}}

  <div class="col-md-6">
    <div class="row g-0 border rounded shadow mb-4 position-relative">
      <div class="col p-4">
        <strong class="d-inline-block mb-2 text-primary">{{categoria.nome}}</strong>
        <h3 class="mb-0">{{titulo}}</h3>
        <div class="mb-1 text-muted">{{data}}</div>
        <p class="card-text mb-auto">{{descricao}}</p>
        <a href="/postagem/{{slug}}">
          <p>Leia +</p>
        </a>
      </div>
      <div class="col-auto">

      </div>
    </div>
  </div>
  {{else}}
  <h5>Nenhuma postagem</h5>
  {{/each}}
</div>


<div class="row">
  <div class="col-md-8">
    <h3 class="pb-4 mb-4 border-bottom">
      Outros artigos
    </h3>
  </div>
  <div class="col-md-4"></div>
</div>